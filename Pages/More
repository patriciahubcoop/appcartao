    ]
  }
];

export default function MorePage() {
  return (
    <div className="min-h-screen bg-slate-50">
      {/* Header */}
      <div className="bg-[#4A9B9E] px-6 pt-12 pb-8">
        <h1 className="text-white text-2xl font-bold">Menu</h1>
      </div>

      <div className="bg-white px-6 py-6 min-h-screen space-y-1">
        {menuSections.map((section) => (
          <div key={section.title}>
            {section.items.map((item, itemIndex) => {
              const Icon = item.icon;
              return item.page ? (
                <Link key={itemIndex} to={createPageUrl(item.page)}>
                  <button className="w-full flex items-center justify-between p-4 hover:bg-slate-50 rounded-lg transition-colors">
                    <div className="flex items-center gap-3">
                      <Icon className={`w-5 h-5 ${item.color || 'text-[#2D3748]'}`} aria-hidden="true" />
                      <span className={`font-medium ${item.color || 'text-[#2D3748]'}`}>{item.label}</span>
                    </div>
                    <ChevronRight className="w-5 h-5 text-[#718096]" aria-hidden="true" />
                  </button>
                </Link>
              ) : (
                <button
                  key={itemIndex}
                  className="w-full flex items-center justify-between p-4 hover:bg-slate-50 rounded-lg transition-colors"
                >
                  <div className="flex items-center gap-3">
                    <Icon className={`w-5 h-5 ${item.color || 'text-[#2D3748]'}`} aria-hidden="true" />
                    <span className={`font-medium ${item.color || 'text-[#2D3748]'}`}>{item.label}</span>
                  </div>
                  <ChevronRight className="w-5 h-5 text-[#718096]" aria-hidden="true" />
                </button>
              );
            })}
          </div>
        ))}
      </div>
    </div>
  );
}